@model LoginViewModel
@using System.Collections.Generic
@using Microsoft.AspNet.Http
@using Microsoft.AspNet.Http.Authentication
@inject SignInManager<ApplicationUser> SignInManager

@{
    Layout = "~/Views/Shared/_MenulessLayout.cshtml";
    ViewBag.Title = "Log in";
}
@section styles
{
    <link rel="stylesheet" href="~/css/login.css" />
}
<nav class="navbar navbar-default">
    
</nav>
<div class="container">
    <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewBag.ReturnUrl" method="post" class="form-horizontal" role="form">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
                <div class="form-group">
                    <div class="input-group input-group-lg">
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-envelope"></span>
                        </span>
                        <input asp-for="Email" type="email" class="form-control" placeholder="Email"/>
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="input-group input-group-lg">
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-lock"></span>
                        </span>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Password"/>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <input asp-for="RememberMe" />
                        <label asp-for="RememberMe"></label>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary btn-lg btn-block" value="Log in" />
                </div>
            </div>
        </div>
    </form>

    <section>
        <p class="text-center"><a asp-action="ForgotPassword">Forgot your password?</a></p>
        <p class="text-center text-muted text-small">Don't have an account yet? <a asp-action="Register">Sign up</a></p>
    </section>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
