@using System.Collections.Generic
@using Microsoft.AspNet.Http
@using Microsoft.AspNet.Http.Authentication
@{
    Layout = "~/Views/Shared/_MenulessLayout.cshtml";
    ViewBag.Title = "Log in";
}
@section styles
{
    <link rel="stylesheet" href="~/css/login.css" />
}
<nav class="navbar navbar-default">
    
</nav>
<div class="container">
    <form class="form-horizontal" role="form">
        <div class="row">
            <div class="
                 col-md-4 col-md-offset-4
                 col-sm-6 col-sm-offset-3
                 col-xs-8 col-xs-offset-2
                 ">
                <div class="text-danger"></div>
                <div class="form-group">
                    <div class="input-group input-group-lg">
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-envelope"></span>
                        </span>
                        <input name="username" type="email" class="form-control" placeholder="Email"/>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group input-group-lg">
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-lock"></span>
                        </span>
                        <input name="password" type="password" class="form-control" placeholder="Password"/>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary btn-lg btn-block" value="Log in" />
                </div>
            </div>
        </div>
    </form>
    <section>
        <p class="text-center"><a>Forgot your password?</a></p>
        <p class="text-center text-muted text-small">Don't have an account yet? <a>Sign up</a></p>
    </section>
</div>

<script>
    $(document).ready(function () {
        (function removeASPUnneededAttributes() {
            //$('form').removeAttr('action method');
            $('[name="__RequestVerificationToken"').remove();
        })()
    });
</script>
